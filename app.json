{
  "expo": {
    "name": "QRweather",
    "slug": "weather-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/qr-logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/qr_splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#598090"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "plugins": [
      "expo-font",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow QRweather to access your camera.",
          "microphonePermission": "Allow QRweather to access your microphone.",
          "recordAudioAndroid": true

        }
      ]
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/qr_splash.png",
        "backgroundColor": "#598090"
      },
      "scheme": "qrweather",
      "permissions": ["CAMERA"]
    },
    "web": {
      "favicon": "./assets/images/qr-logo.png"
    }
  }
}
